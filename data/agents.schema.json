{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Coding Agents Database",
  "description": "Schema for coding agents data with update metadata",
  "type": "object",
  "properties": {
    "last_updated": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when this data was last updated (ISO 8601 format with timezone)"
    },
    "providers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/provider"
      }
    }
  },
  "required": ["last_updated", "providers"],
  "definitions": {
    "update_metadata": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["manual", "research", "fetch"],
          "description": "Update type: manual (no auto-update), research (fresh research needed), fetch (retrieve from source)"
        },
        "last_updated": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of last update (ISO 8601), required for research and fetch types"
        },
        "source_url": {
          "type": "string",
          "format": "uri",
          "description": "Authoritative source URL, required for fetch type only"
        }
      },
      "required": ["type"]
    },
    "provider": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier (not wrapped, used for referencing)"
        },
        "name": {
          "type": "object",
          "properties": {
            "value": { "type": "string" },
            "update": { "$ref": "#/definitions/update_metadata" }
          },
          "required": ["value", "update"]
        },
        "website": {
          "type": "object",
          "properties": {
            "value": { "type": "string", "format": "uri" },
            "update": { "$ref": "#/definitions/update_metadata" }
          },
          "required": ["value", "update"]
        },
        "billing_model": {
          "type": "object",
          "properties": {
            "value": {
              "type": "string",
              "enum": ["billed_by_agent_provider", "billed_by_model_provider"]
            },
            "update": { "$ref": "#/definitions/update_metadata" }
          },
          "required": ["value", "update"]
        },
        "pricing": {
          "type": ["object", "null"],
          "properties": {
            "value": {
              "type": ["object", "null"],
              "properties": {
                "url": { "type": "string", "format": "uri" },
                "plans": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "plan": { "type": "string" },
                      "monthly_usd": { "type": "number", "minimum": 0 },
                      "yearly_usd": { "type": "number", "minimum": 0 }
                    },
                    "required": ["plan", "monthly_usd", "yearly_usd"]
                  }
                }
              },
              "required": ["url", "plans"]
            },
            "update": { "$ref": "#/definitions/update_metadata" }
          },
          "required": ["value", "update"]
        },
        "agents": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/agent"
          }
        }
      },
      "required": ["id", "name", "website", "billing_model", "agents"]
    },
    "agent": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier (not wrapped)"
        },
        "name": {
          "type": "object",
          "properties": {
            "value": { "type": "string" },
            "update": { "$ref": "#/definitions/update_metadata" }
          },
          "required": ["value", "update"]
        },
        "category": {
          "type": "object",
          "properties": {
            "value": {
              "type": "string",
              "enum": ["cli_tool", "ide_extension", "dedicated_ide", "web_ide", "vibe_coding", "other"]
            },
            "update": { "$ref": "#/definitions/update_metadata" }
          },
          "required": ["value", "update"]
        },
        "open_source": {
          "type": "object",
          "properties": {
            "value": { "type": "boolean" },
            "update": { "$ref": "#/definitions/update_metadata" }
          },
          "required": ["value", "update"]
        },
        "github_repo": {
          "type": "object",
          "properties": {
            "value": { "type": ["string", "null"], "format": "uri" },
            "update": { "$ref": "#/definitions/update_metadata" }
          },
          "required": ["value", "update"]
        },
        "github_stars": {
          "type": "object",
          "properties": {
            "value": { "type": ["integer", "null"], "minimum": 0 },
            "update": { "$ref": "#/definitions/update_metadata" }
          },
          "required": ["value", "update"]
        },
        "release_date": {
          "type": "object",
          "properties": {
            "value": {
              "type": "string",
              "pattern": "^[0-9]{4}-[0-9]{2}(-[0-9]{2})?$"
            },
            "update": { "$ref": "#/definitions/update_metadata" }
          },
          "required": ["value", "update"]
        },
        "compat_spec_driven_development": {
          "type": "object",
          "properties": {
            "value": {
              "type": "array",
              "items": { "type": "string" }
            },
            "update": { "$ref": "#/definitions/update_metadata" }
          },
          "required": ["value", "update"]
        },
        "compat_git": {
          "type": "object",
          "properties": {
            "value": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "target": {
                    "type": "string",
                    "enum": ["github", "gitlab", "bitbucket", "local"]
                  },
                  "access": {
                    "type": "string",
                    "enum": ["native", "mcp"]
                  }
                },
                "required": ["target", "access"]
              }
            },
            "update": { "$ref": "#/definitions/update_metadata" }
          },
          "required": ["value", "update"]
        },
        "mcp_support": {
          "type": "object",
          "properties": {
            "value": { "type": "boolean" },
            "update": { "$ref": "#/definitions/update_metadata" }
          },
          "required": ["value", "update"]
        },
        "compat_ide": {
          "type": "object",
          "properties": {
            "value": {
              "type": ["array", "null"],
              "items": { "type": "string" }
            },
            "update": { "$ref": "#/definitions/update_metadata" }
          },
          "required": ["value", "update"]
        },
        "model_selection": {
          "type": "object",
          "properties": {
            "value": { "type": "boolean" },
            "update": { "$ref": "#/definitions/update_metadata" }
          },
          "required": ["value", "update"]
        },
        "models": {
          "type": "object",
          "properties": {
            "value": {
              "type": "object",
              "properties": {
                "openai": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "access": { "type": "string", "enum": ["native", "aggregator"] },
                      "note": { "type": ["string", "null"] }
                    },
                    "required": ["id", "access"]
                  }
                },
                "anthropic": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "access": { "type": "string", "enum": ["native", "aggregator"] },
                      "note": { "type": ["string", "null"] }
                    },
                    "required": ["id", "access"]
                  }
                },
                "google": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "access": { "type": "string", "enum": ["native", "aggregator"] },
                      "note": { "type": ["string", "null"] }
                    },
                    "required": ["id", "access"]
                  }
                },
                "xai": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "access": { "type": "string", "enum": ["native", "aggregator"] },
                      "note": { "type": ["string", "null"] }
                    },
                    "required": ["id", "access"]
                  }
                },
                "others": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "access": { "type": "string", "enum": ["native", "aggregator"] },
                      "note": { "type": ["string", "null"] }
                    },
                    "required": ["id", "access"]
                  }
                }
              }
            },
            "update": { "$ref": "#/definitions/update_metadata" }
          },
          "required": ["value", "update"]
        }
      },
      "required": [
        "id",
        "name",
        "category",
        "open_source",
        "github_repo",
        "github_stars",
        "release_date",
        "compat_spec_driven_development",
        "compat_git",
        "mcp_support",
        "model_selection",
        "models"
      ]
    }
  }
}
