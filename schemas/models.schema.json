{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Models Database",
  "description": "Schema for models data",
  "type": "object",
  "properties": {
    "last_updated": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when this data was last updated (ISO 8601 format with timezone, e.g., 2025-11-02T14:30:00Z)"
    },
    "providers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/model_provider"
      }
    }
  },
  "required": ["last_updated", "providers"],
  "definitions": {
    "model_provider": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the provider (lowercase)"
        },
        "name": {
          "type": "string",
          "description": "Display name of the provider"
        },
        "website": {
          "type": "string",
          "format": "uri",
          "description": "Provider website URL"
        },
        "pricing_url": {
          "type": "string",
          "format": "uri",
          "description": "URL to pricing page"
        },
        "models": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/model"
          }
        }
      },
      "required": ["id", "name", "website", "pricing_url", "models"]
    },
    "model": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the model (lowercase, hyphenated)"
        },
        "name": {
          "type": "string",
          "description": "Display name of the model"
        },
        "context_size_tokens": {
          "type": ["integer", "null"],
          "minimum": 0,
          "description": "Maximum context window size in tokens (null if not applicable)"
        },
        "release_date": {
          "type": ["string", "null"],
          "pattern": "^[0-9]{4}-[0-9]{2}(-[0-9]{2})?$",
          "description": "Release date (YYYY-MM or YYYY-MM-DD, null if unknown)"
        },
        "pricing_tiers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/pricing_tier"
          },
          "minItems": 1,
          "description": "Array of pricing tiers (different pricing based on usage conditions)"
        }
      },
      "required": [
        "id",
        "name",
        "context_size_tokens",
        "pricing_tiers"
      ]
    },
    "pricing_tier": {
      "type": "object",
      "properties": {
        "condition": {
          "type": ["string", "null"],
          "description": "Pricing condition (e.g., 'â‰¤200K tokens', 'cached', '>128K tokens', null for default/single tier)"
        },
        "input_1m_tokens": {
          "type": ["number", "null"],
          "minimum": 0,
          "description": "Input price in USD per 1 million tokens (null if not applicable)"
        },
        "output_1m_tokens": {
          "type": ["number", "null"],
          "minimum": 0,
          "description": "Output price in USD per 1 million tokens (null if not applicable)"
        }
      },
      "required": [
        "input_1m_tokens",
        "output_1m_tokens"
      ]
    }
  }
}
